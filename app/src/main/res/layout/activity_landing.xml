<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landing"
    android:background="#FFE8E8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:padding="10dp"
                android:text="OUR MENU"
                android:textColor="#070707"
                android:textSize="34sp" />

            <!-- Item 1: Fried Momos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/fried_momos" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/adlam_display"
                        android:text="Fried Momos"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:text="₹120"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bfmomo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to Cart"
                        android:background="@drawable/buttongradient"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Item 2: Steamed Momos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/steam_momos" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/adlam_display"
                        android:text="Steamed Momos"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:text="₹100"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bsmomo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to Cart"
                        android:background="@drawable/buttongradient"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Item 3: Sandwich -->

            <!-- Item 4: Noodles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/sandwichh" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/adlam_display"
                        android:text="Sandwich"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹80"
                        android:textColor="#4CAF50"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bsan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttongradient"
                        android:text="Add to Cart" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/noodles" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:text="Noodles"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/adlam_display"/>

                    <TextView
                        android:text="₹90"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bnod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to Cart"
                        android:background="@drawable/buttongradient"/>/>
                </LinearLayout>
            </LinearLayout>

            <!-- Item 5: Manchurian -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/manchurian" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:text="Manchurian"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/adlam_display"/>

                    <TextView
                        android:text="₹110"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to Cart"
                        android:background="@drawable/buttongradient"/>/>
                </LinearLayout>
            </LinearLayout>

            <!-- Item 6: Paneer Frankie -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/paneerfrankie" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:text="Paneer Frankie"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/adlam_display"/>

                    <TextView
                        android:text="₹130"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bpf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to Cart"
                        android:background="@drawable/buttongradient"/>/>
                </LinearLayout>
            </LinearLayout>
            <!-- Dosa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/dosa" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:text="Dosa"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/adlam_display"/>

                    <TextView
                        android:text="₹140"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bdosa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to Cart"
                        android:background="@drawable/buttongradient"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Cold Coffee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/coldcofi" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:text="Cold Coffee"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/adlam_display"/>

                    <TextView
                        android:text="₹90"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bcc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to Cart"
                        android:background="@drawable/buttongradient"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/buttonvc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_cart" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
